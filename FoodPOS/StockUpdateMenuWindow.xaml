<Window x:Class="FoodPOS.StockUpdateMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Stock Update - FoodPOS" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Window.Resources>
        <Style x:Key="StockButton" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="📦 Quick Stock Update" 
                   FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,10" Foreground="#2196F3"/>

        <!-- Search and Filters -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearch" Width="200" Height="25" 
             TextChanged="txtSearch_TextChanged"/>

            <ComboBox x:Name="cmbStockFilter" Width="120" Height="25" 
              Margin="10,0,0,0" SelectionChanged="cmbStockFilter_SelectionChanged">
                <ComboBoxItem Content="All Stock" IsSelected="True"/>
                <ComboBoxItem Content="Out of Stock"/>
                <ComboBoxItem Content="Low Stock"/>
                <ComboBoxItem Content="In Stock"/>
            </ComboBox>

            <Button Content="🔄 Refresh" Click="btnRefresh_Click"
            Margin="10,0,0,0" Padding="10,5"/>
        </StackPanel>

        <!-- Products List for Quick Stock Update -->
        <DataGrid Grid.Row="2" x:Name="dgProducts" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Current Stock" Binding="{Binding StockQuantity}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="1">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="2">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="3">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Status" Binding="{Binding StockText}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="1">
                                    <Setter Property="Foreground" Value="Orange"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="2">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StockQuantity}" Value="3">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Quick Actions" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="➕ Add 10" 
                                        Style="{StaticResource StockButton}"
                                        Background="#4CAF50" Foreground="White"
                                        Click="btnAddStock_Click"
                                        Tag="{Binding ProductId}"/>
                                <Button Content="➕ Add 5" 
                                        Style="{StaticResource StockButton}"
                                        Background="#4CAF50" Foreground="White"
                                        Click="btnAddStock_Click"
                                        Tag="{Binding ProductId}"/>
                                <Button Content="📝 Custom" 
                                        Style="{StaticResource StockButton}"
                                        Background="#2196F3" Foreground="White"
                                        Click="btnCustomStock_Click"
                                        Tag="{Binding ProductId}"/>
                                <Button Content="➖ Remove 1" 
                                        Style="{StaticResource StockButton}"
                                        Background="#FF9800" Foreground="White"
                                        Click="btnRemoveStock_Click"
                                        Tag="{Binding ProductId}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer Statistics -->
        <Border Grid.Row="3" Background="#F5F5F5" BorderBrush="#DDD" BorderThickness="1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Quick Update: " FontWeight="Bold" Margin="0,0,10,0"/>
                <Button Content="➕ Add 10 to All Low Stock" 
                        Click="btnAddToAllLowStock_Click"
                        Background="#4CAF50" Foreground="White" Padding="10,5"
                        Margin="0,0,10,0"/>
                <Button Content="📝 Open Full Manager" 
                        Click="btnOpenFullManager_Click"
                        Background="#2196F3" Foreground="White" Padding="10,5"
                        Margin="0,0,10,0"/>
                <Button Content="❌ Close" 
                        Click="btnClose_Click"
                        Background="#F44336" Foreground="White" Padding="10,5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>