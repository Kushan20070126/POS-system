<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FoodPOS"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="FoodPOS.POSWindow"
        Title="FoodPOS - Point of Sale" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>


    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🍕 FoodPOS - Point of Sale" 
                              Foreground="White" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text=" | " Foreground="White" Margin="10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtUserInfo" Text="Welcome, Admin" Foreground="White"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnReportsHeader" Content="📊 Reports" Background="Transparent" Foreground="White" 
                            BorderThickness="0" Margin="0,0,10,0" Click="btnReports_Click"
                            Cursor="Hand"/>
                    <Button Content="📦 Products" Background="Transparent" Foreground="White" 
                            BorderThickness="0" Margin="0,0,10,0" Click="btnProducts_Click"
                            Cursor="Hand"/>
                    <Button Content="🚪 Logout" Background="Transparent" Foreground="White" 
                            BorderThickness="0" Click="btnLogout_Click"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Categories Menu -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderThickness="0,0,1,0" BorderBrush="#DDD">
                <StackPanel Margin="10">
                    <TextBlock Text="Categories" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                    <StackPanel x:Name="CategoriesPanel">
                        <!-- Categories will be loaded dynamically -->
                    </StackPanel>

                    <!-- Product Management Buttons -->
                    <Border x:Name="productManagementBorder" Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="Product Management" FontWeight="Bold" Margin="0,0,0,5"/>
                            <Button Content="➕ Add Product" Style="{StaticResource MenuButtonStyle}"
                                    Click="btnAddProduct_Click" Background="#E8F5E8"/>
                            <Button Content="✏️ Manage Products" Style="{StaticResource MenuButtonStyle}"
                                    Click="btnManageProducts_Click" Background="#FFF3E0"/>
                            <Button Content="📦 Update Stock" Style="{StaticResource MenuButtonStyle}"
                Click="btnUpdateStock_Click" Background="#E1BEE7"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Products Grid -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search and Filter -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtSearch" Width="200" Height="30" Padding="5" 
                            TextChanged="txtSearch_TextChanged"/>
                    <Button Content="🔍 Search" Width="80" Height="30" Margin="5,0,0,0"
                            Click="btnSearch_Click" Background="#2196F3" Foreground="White"/>
                </StackPanel>

                <!-- Products Grid -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ProductsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" Margin="5" 
                                        Background="{Binding StockBackground}" CornerRadius="5" Width="180" Height="140">
                                    <StackPanel Margin="8">
                                        <!-- Product Name with Stock Icon -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                            <TextBlock Text="{Binding StockIcon}" FontSize="12" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- Price -->
                                        <TextBlock Text="{Binding FormattedPrice}" 
                                          Foreground="Green" FontWeight="SemiBold"
                                          Margin="0,0,0,2"/>

                                        <!-- Description -->
                                        <TextBlock Text="{Binding Description}" FontSize="10" 
                                                  Foreground="#666" TextWrapping="Wrap"
                                                  Margin="0,0,0,5" MaxHeight="30"/>

                                        <!-- Stock Status -->
                                        <Border Background="{Binding StockStatusBackground}" CornerRadius="3" 
                                                Padding="3,1" BorderThickness="1" BorderBrush="#AAA">
                                            <TextBlock Text="{Binding StockText}" FontSize="9" 
                                                      FontWeight="SemiBold" TextAlignment="Center"
                                                      Foreground="{Binding StockStatusColor}"/>
                                        </Border>

                                        <!-- Add to Order Button -->
                                        <Button Content="Add to Order" Margin="0,5,0,0" 
                                                Background="{Binding ButtonColor}" Foreground="White"
                                                Height="25" FontSize="11"
                                                Click="AddToOrder_Click"
                                                Tag="{Binding}"
                                                IsEnabled="{Binding IsInStock}">
                                            <Button.ToolTip>
                                                <ToolTip>
                                                    <TextBlock><Run Text="{Binding Name}"/><LineBreak/><Run Text="{Binding StockText}"/><LineBreak/><Run Text="Click to add to order"/></TextBlock>
                                                </ToolTip>
                                            </Button.ToolTip>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Order Panel -->
            <Border Grid.Column="2" Background="#FAFAFA" BorderThickness="1,0,0,0" BorderBrush="#DDD">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Current Order" FontSize="16" FontWeight="Bold" 
                              Margin="0,0,0,10"/>

                    <!-- Order Items -->
                    <ListView Grid.Row="1" x:Name="OrderItemsListView" BorderThickness="0" Margin="0,29,0,28" av:ItemsSource="{av:SampleData ItemCount=5}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding UnitPrice, StringFormat=C2}" 
                                                      FontSize="10" Foreground="#666"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Content="-" Width="20" Height="20" FontSize="10"
                                                    Click="DecreaseQuantity_Click"
                                                    Tag="{Binding ProductId}"/>
                                            <TextBlock Text="{Binding Quantity}" Width="30" 
                                                      TextAlignment="Center" VerticalAlignment="Center"/>
                                            <Button Content="+" Width="20" Height="20" FontSize="10"
                                                    Click="IncreaseQuantity_Click"
                                                    Tag="{Binding ProductId}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{Binding TotalPrice, StringFormat=C2}" 
                                                  VerticalAlignment="Center" Margin="10,0"/>

                                        <Button Grid.Column="3" Content="❌" FontSize="10" 
                                                Width="20" Height="20" Padding="0"
                                                Click="RemoveItem_Click"
                                                Tag="{Binding ProductId}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Separator Grid.Row="2" Margin="0,10"/>

                    <!-- Order Summary -->
                    <StackPanel Grid.Row="3" Margin="0,10,0,0">
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Subtotal:"/>
                            <TextBlock Grid.Column="1" Text="{Binding Subtotal, StringFormat=C2}" 
                                      x:Name="txtSubtotal"/>
                        </Grid>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Tax (8%):"/>
                            <TextBlock Grid.Column="1" Text="{Binding TaxAmount, StringFormat=C2}" 
                                      x:Name="txtTax"/>
                        </Grid>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Total:" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat=C2}" 
                                      FontWeight="Bold" x:Name="txtTotal"/>
                        </Grid>
                    </StackPanel>

                    <!-- Payment Buttons -->
                    <StackPanel Grid.Row="4" Margin="0,20,0,0">
                        <Button Content="💳 CARD PAYMENT" 
                               Background="#4CAF50" Foreground="White" FontWeight="Bold"
                               Height="40" Margin="0,5,0,0" Click="CardPayment_Click"/>
                        <Button Content="💵 CASH PAYMENT" 
                               Background="#FF9800" Foreground="White" FontWeight="Bold"
                               Height="40" Margin="0,5,0,0" Click="CashPayment_Click"/>
                        <Button Content="🔄 CLEAR ORDER" 
                               Background="#F44336" Foreground="White"
                               Height="30" Margin="0,10,0,0" Click="ClearOrder_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#EEE" Padding="10">
            <TextBlock Text="FoodPOS © 2024 - DSE24.3" HorizontalAlignment="Center" Foreground="#666"/>
        </Border>
    </Grid>
</Window>