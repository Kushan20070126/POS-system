<Window x:Class="FoodPOS.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="&#x1F4CA; FoodPOS - Reports &amp; Analytics"
        Height="800" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="White"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="ReportButton" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="5" 
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
           Text="&#x1F4CA; FoodPOS - Reports &amp; Analytics"  
           Foreground="White" FontSize="18" FontWeight="Bold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 Refresh" Background="Transparent" Foreground="White" 
                            BorderThickness="0" Margin="0,0,10,0" Click="btnRefresh_Click"/>
                    <Button Content="📄 Export" Background="Transparent" Foreground="White" 
                            BorderThickness="0" Margin="0,0,10,0" Click="btnExport_Click"/>
                    <Button Content="❌ Close" Background="Transparent" Foreground="White" 
                            BorderThickness="0" Click="btnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Report Controls -->
            <Border Grid.Row="0" Background="#F5F5F5" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Report Period:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <Button Content="📅 Daily" Style="{StaticResource ReportButton}" Click="DailyReport_Click"/>
                    <Button Content="📅 Weekly" Style="{StaticResource ReportButton}" Click="WeeklyReport_Click"/>
                    <Button Content="📅 Monthly" Style="{StaticResource ReportButton}" Click="MonthlyReport_Click"/>
                    <Button Content="📅 Yearly" Style="{StaticResource ReportButton}" Click="YearlyReport_Click"/>

                    <TextBlock Text="Date Range:" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <DatePicker x:Name="dpStartDate" Width="120" Margin="0,0,5,0"/>
                    <TextBlock Text="to" VerticalAlignment="Center" Margin="5,0,5,0"/>
                    <DatePicker x:Name="dpEndDate" Width="120" Margin="0,0,10,0"/>
                    <Button Content="🔍 Custom Range" Style="{StaticResource ReportButton}" Click="CustomRange_Click"/>
                    <Button Content="🔧" Background="Transparent" Foreground="Black" 
        BorderThickness="0" Click="btnsetting_Click" RenderTransformOrigin="-3.231,0.298" Width="51"/>
                </StackPanel>
            </Border>

            <!-- Report Content -->
            <TabControl Grid.Row="1">
                <!-- Sales Summary Tab -->
                <TabItem Header="📈 Sales Summary">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <!-- Key Metrics -->
                            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Total Revenue -->
                                    <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="💰 Total Revenue" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtTotalRevenue" Text="Rs.0.00" FontSize="20" FontWeight="Bold" Foreground="#2196F3"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Total Orders -->
                                    <Border Grid.Column="1" Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="📦 Total Orders" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtTotalOrders" Text="0" FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Average Order Value -->
                                    <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="📊 Avg Order Value" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtAvgOrderValue" Text="Rs.0.00" FontSize="20" FontWeight="Bold" Foreground="#FF9800"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Top Selling Product -->
                                    <Border Grid.Column="3" Background="#FCE4EC" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="🏆 Top Product" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtTopProduct" Text="N/A" FontSize="14" FontWeight="Bold" Foreground="#E91E63" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Charts Row 1 -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Sales Trend Chart -->
                                <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="📈 Sales Trend" FontWeight="Bold" Margin="10"/>
                                        <lvc:CartesianChart x:Name="SalesTrendChart" Series="{Binding SalesSeries}" LegendLocation="Right" Height="300">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Date" Labels="{Binding Dates}"/>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Amount (Rs.)"/>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </StackPanel>
                                </Border>

                                <!-- Payment Methods Chart -->
                                <Border Grid.Column="1" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="5,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="💳 Payment Methods" FontWeight="Bold" Margin="10"/>
                                        <lvc:PieChart x:Name="PaymentMethodChart" Series="{Binding PaymentSeries}" LegendLocation="Right" Height="300"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Charts Row 2 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Top Products Chart -->
                                <Border Grid.Column="0" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="🏆 Top Selling Products" FontWeight="Bold" Margin="10"/>
                                        <lvc:CartesianChart x:Name="TopProductsChart" Series="{Binding TopProductsSeries}" LegendLocation="Right" Height="300">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Products" Labels="{Binding ProductNames}"/>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Quantity Sold"/>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </StackPanel>
                                </Border>

                                <!-- Hourly Sales Chart -->
                                <Border Grid.Column="1" Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="5,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="🕒 Hourly Sales" FontWeight="Bold" Margin="10"/>
                                        <lvc:CartesianChart x:Name="HourlySalesChart" Series="{Binding HourlySeries}" LegendLocation="Right" Height="300">
                                            <lvc:CartesianChart.AxisX>
                                                <lvc:Axis Title="Hour" Labels="{Binding Hours}"/>
                                            </lvc:CartesianChart.AxisX>
                                            <lvc:CartesianChart.AxisY>
                                                <lvc:Axis Title="Sales (Rs.)"/>
                                            </lvc:CartesianChart.AxisY>
                                        </lvc:CartesianChart>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Detailed Report Tab -->
                <TabItem Header="📋 Detailed Report">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="57*"/>
                            <ColumnDefinition Width="18*"/>
                            <ColumnDefinition Width="899*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Report Controls -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="3">
                            <Button Content="🖨️ Print Report" Style="{StaticResource ReportButton}" Click="btnPrint_Click"/>
                            <Button Content="💾 Save as PDF" Style="{StaticResource ReportButton}" Click="btnSavePDF_Click" Margin="5,0,0,0"/>
                        </StackPanel>

                        <!-- Data Grid -->
                        <DataGrid Grid.Row="1" x:Name="dgReportData" AutoGenerateColumns="True" 
                                 Margin="10,10,10,10" IsReadOnly="True"
                                 CanUserAddRows="False" CanUserDeleteRows="False" Grid.ColumnSpan="3"/>
                    </Grid>
                </TabItem>

                <!-- Profit Analysis Tab -->
                <TabItem Header="💰 Profit Analysis">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <!-- Profit Metrics -->
                            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Gross Profit -->
                                    <Border Grid.Column="0" Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="💰 Gross Profit" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtGrossProfit" Text="Rs.0.00" FontSize="20" FontWeight="Bold" Foreground="#4CAF50"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Profit Margin -->
                                    <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="📊 Profit Margin" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtProfitMargin" Text="0%" FontSize="20" FontWeight="Bold" Foreground="#2196F3"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Most Profitable Product -->
                                    <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="🏆 Best Margin" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtBestMarginProduct" Text="N/A" FontSize="14" FontWeight="Bold" Foreground="#FF9800" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Cost of Goods -->
                                    <Border Grid.Column="3" Background="#FFEBEE" CornerRadius="5" Padding="10" Margin="5">
                                        <StackPanel>
                                            <TextBlock Text="📦 Cost of Goods" FontSize="12" Foreground="#666"/>
                                            <TextBlock x:Name="txtCostOfGoods" Text="Rs.0.00" FontSize="20" FontWeight="Bold" Foreground="#F44336"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Profit Chart -->
                            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="💰 Revenue vs Profit" FontWeight="Bold" Margin="10"/>
                                    <lvc:CartesianChart x:Name="ProfitChart" Series="{Binding ProfitSeries}" LegendLocation="Right" Height="300">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Date" Labels="{Binding ProfitDates}"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Amount (Rs.)"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </StackPanel>
                            </Border>

                            <!-- Product Profitability -->
                            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="📊 Product Profitability" FontWeight="Bold" Margin="10"/>
                                    <lvc:CartesianChart x:Name="ProductProfitChart" Series="{Binding ProductProfitSeries}" LegendLocation="Right" Height="300">
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Products" Labels="{Binding ProfitProductNames}"/>
                                        </lvc:CartesianChart.AxisX>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Profit (Rs.)"/>
                                        </lvc:CartesianChart.AxisY>
                                    </lvc:CartesianChart>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>